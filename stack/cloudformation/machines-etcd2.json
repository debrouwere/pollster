{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "ClusterSize": {
      "Type": "Number",
      "Description": "Number of nodes in your cluster",
      "MinValue": 3,
      "Default": 3
    },
    "DiscoveryURL": {
      "Type": "String",
      "Description": "An unique etcd2 cluster discovery URL. Grab a new token from https://discovery.etcd.io/new?size=n (Ignore the size parameter for etcd 0.4.x.)"
    },
    "KeyPair": {
      "Type": "String",
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance."
    }
  },
  "Mappings": {
    "RegionMap": {
      "us-gov-west-1": {
        "AMI": "ami-f1d1b2d2"
      },
      "us-west-1": {
        "AMI": "ami-dbe71d9f"
      },
      "us-west-2": {
        "AMI": "ami-99bfada9"
      },
      "us-east-1": {
        "AMI": "ami-f396fa96"
      },
      "ap-northeast-1": {
        "AMI": "ami-1e77ff1e"
      },
      "eu-west-1": {
        "AMI": "ami-83e9c8f4"
      },
      "ap-southeast-2": {
        "AMI": "ami-83f8b4b9"
      },
      "sa-east-1": {
        "AMI": "ami-632ba17e"
      },
      "ap-southeast-1": {
        "AMI": "ami-12060c40"
      },
      "eu-central-1": {
        "AMI": "ami-74bbba69"
      }
    }
  },
  "Resources": {
    "EtcdIngress2380": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 2380,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 2380,
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      }
    },
    "EtcdIngress7001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 7001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 7001,
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      }
    },
    "CoreOSAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      }
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "RedisIngress6379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 6379,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 6379,
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      }
    },
    "CoreOSServerAutoScale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "PropagateAtLaunch": true,
            "Value": {
              "Ref": "AWS::StackName"
            }
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "MinSize": 3,
        "MaxSize": 10,
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        }
      }
    },
    "EtcdIngress4001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 4001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 4001,
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      }
    },
    "CoreOSServerLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ],
        "KeyName": {
          "Ref": "KeyPair"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  update:\n    reboot-strategy: off\n  units:\n    - name: etcd2.service\n      command: start\n    - name: fleet.service\n      command: start\n  etcd2:\n    advertise-client-urls: http://$private_ipv4:2379\n    initial-advertise-peer-urls: http://$private_ipv4:2380\n    listen-client-urls: http://0.0.0.0:2379\n    listen-peer-urls: http://$private_ipv4:2380\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "InstanceType": "t2.micro"
      }
    },
    "EtcdIngress2379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 2379,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 2379,
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      }
    },
    "CoreOSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "SecurityGroupIngress": [
          {
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": 22
          },
          {
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0",
            "FromPort": 80,
            "IpProtocol": "tcp"
          }
        ],
        "GroupDescription": "Jobs"
      }
    }
  },
  "Description": "Jobs stack"
}
