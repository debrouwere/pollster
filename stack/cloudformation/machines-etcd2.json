{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Jobs stack",
  "Parameters": {
    "ClusterSize": {
      "MinValue": 3,
      "Description": "Number of nodes in your cluster",
      "Type": "Number",
      "Default": 3
    },
    "DiscoveryURL": {
      "Description": "An unique etcd2 cluster discovery URL. Grab a new token from https://discovery.etcd.io/new?size=n (Ignore the size parameter for etcd 0.4.x.)",
      "Type": "String"
    },
    "KeyPair": {
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance.",
      "Type": "String"
    }
  },
  "Mappings": {
    "RegionMap": {
      "ap-northeast-1": {
        "AMI": "ami-22d27b22"
      },
      "ap-southeast-1": {
        "AMI": "ami-0ef1f15c"
      },
      "us-west-1": {
        "AMI": "ami-bf8477fb"
      },
      "eu-west-1": {
        "AMI": "ami-50f4b927"
      },
      "sa-east-1": {
        "AMI": "ami-45a62a58"
      },
      "us-gov-west-1": {
        "AMI": "ami-e53a59c6"
      },
      "ap-southeast-2": {
        "AMI": "ami-2b2e6911"
      },
      "eu-central-1": {
        "AMI": "ami-02211b1f"
      },
      "us-east-1": {
        "AMI": "ami-6b1cd400"
      },
      "us-west-2": {
        "AMI": "ami-f5a5a5c5"
      }
    }
  },
  "Resources": {
    "CoreOSServerLaunchConfig": {
      "Properties": {
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  update:\n    reboot-strategy: off\n  units:\n    - name: etcd2.service\n      command: start\n    - name: fleet.service\n      command: start\n  etcd2:\n    advertise-client-urls: http://$private_ipv4:2379\n    initial-advertise-peer-urls: http://$private_ipv4:2380\n    listen-client-urls: http://0.0.0.0:2379\n    listen-peer-urls: http://$private_ipv4:2380\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "InstanceType": "t2.micro",
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "KeyName": {
          "Ref": "KeyPair"
        }
      },
      "Type": "AWS::AutoScaling::LaunchConfiguration"
    },
    "EtcdIngress4001": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "FromPort": 4001,
        "ToPort": 4001
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "EtcdIngress2380": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "FromPort": 2380,
        "ToPort": 2380
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "RedisIngress6379": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "FromPort": 6379,
        "ToPort": 6379
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "CoreOSServerAutoScale": {
      "Properties": {
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "MaxSize": 10,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "AWS::StackName"
            },
            "PropagateAtLaunch": true
          }
        ],
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "MinSize": 3,
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        }
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup"
    },
    "EtcdIngress7001": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "FromPort": 7001,
        "ToPort": 7001
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "CoreOSSecurityGroup": {
      "Properties": {
        "GroupDescription": "Jobs",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "FromPort": 80,
            "IpProtocol": "tcp",
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "CoreOSAccessKey": {
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      },
      "Type": "AWS::IAM::AccessKey"
    },
    "EtcdIngress2379": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "FromPort": 2379,
        "ToPort": 2379
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    }
  }
}
