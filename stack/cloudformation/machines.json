{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "CoreOSServerLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n    #- name: master.service\n    #  command: start\n    #  content: \n  etcd:\n    addr: $private_ipv4:4001\n    peer-addr: $private_ipv4:7001\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "InstanceType": "t2.micro",
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "ami"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ],
        "KeyName": {
          "Ref": "KeyPair"
        }
      }
    },
    "CoreOSAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      }
    },
    "RedisIngress6379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "IpProtocol": "tcp",
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 6379,
        "FromPort": 6379
      }
    },
    "CoreOSServerAutoScale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        },
        "MaxSize": 10,
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "MinSize": 1,
        "Tags": [
          {
            "Value": {
              "Ref": "AWS::StackName"
            },
            "Key": "Name",
            "PropagateAtLaunch": true
          }
        ],
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        }
      }
    },
    "EtcdIngress4001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "IpProtocol": "tcp",
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 4001,
        "FromPort": 4001
      }
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "CoreOSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "ToPort": 22,
            "FromPort": 22,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "ToPort": 80,
            "FromPort": 80,
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "GroupDescription": "Jobs"
      }
    },
    "EtcdIngress7001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "IpProtocol": "tcp",
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "ToPort": 7001,
        "FromPort": 7001
      }
    }
  },
  "Mappings": {
    "RegionMap": {
      "ap-northeast-1": {
        "ami": "ami-838eb882"
      },
      "us-west-1": {
        "ami": "ami-856772c0"
      },
      "ap-southeast-2": {
        "ami": "ami-1dabc627"
      },
      "us-west-2": {
        "ami": "ami-f52c63c5"
      },
      "eu-west-1": {
        "ami": "ami-58e14e2f"
      },
      "sa-east-1": {
        "ami": "ami-75922668"
      },
      "us-east-1": {
        "ami": "ami-d878c3b0"
      },
      "ap-southeast-1": {
        "ami": "ami-7878592a"
      }
    }
  },
  "Description": "Jobs stack",
  "Parameters": {
    "ClusterSize": {
      "Default": 3,
      "Type": "Number",
      "MinValue": 3,
      "Description": "Number of nodes in your cluster",
      "MaxValue": 10
    },
    "KeyPair": {
      "Type": "String",
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance."
    },
    "DiscoveryURL": {
      "Type": "String",
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new"
    }
  }
}
