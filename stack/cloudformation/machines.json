{
  "Mappings": {
    "RegionMap": {
      "us-west-1": {
        "ami": "ami-857a92c1"
      },
      "ap-southeast-2": {
        "ami": "ami-7b85fc41"
      },
      "ap-southeast-1": {
        "ami": "ami-da033b88"
      },
      "sa-east-1": {
        "ami": "ami-d5b839c8"
      },
      "ap-northeast-1": {
        "ami": "ami-9cc1119c"
      },
      "eu-central-1": {
        "ami": "ami-f86b52e5"
      },
      "us-east-1": {
        "ami": "ami-c36583a8"
      },
      "eu-west-1": {
        "ami": "ami-e18cfc96"
      },
      "us-west-2": {
        "ami": "ami-975f60a7"
      }
    }
  },
  "Parameters": {
    "KeyPair": {
      "Type": "String",
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance."
    },
    "ClusterSize": {
      "Type": "Number",
      "Description": "Number of nodes in your cluster",
      "Default": 3,
      "MinValue": 3
    },
    "DiscoveryURL": {
      "Type": "String",
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new"
    }
  },
  "Resources": {
    "EtcdIngress4001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 4001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "FromPort": 4001
      }
    },
    "EtcdIngress2380": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 2380,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "FromPort": 2380
      }
    },
    "EtcdIngress7001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 7001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "FromPort": 7001
      }
    },
    "EtcdIngress2379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 2379,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "FromPort": 2379
      }
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "RedisIngress6379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 6379,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "FromPort": 6379
      }
    },
    "CoreOSAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      }
    },
    "CoreOSServerAutoScale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "Tags": [
          {
            "Value": {
              "Ref": "AWS::StackName"
            },
            "PropagateAtLaunch": true,
            "Key": "Name"
          }
        ],
        "MinSize": 3,
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "MaxSize": 10,
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        }
      }
    },
    "CoreOSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Jobs",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0",
            "FromPort": 22
          },
          {
            "IpProtocol": "tcp",
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0",
            "FromPort": 80
          }
        ]
      }
    },
    "CoreOSServerLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "ami"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ],
        "KeyName": {
          "Ref": "KeyPair"
        },
        "InstanceType": "t2.micro",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  update:\n    reboot-strategy: off\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n  etcd2:\n    advertise-client-urls: 'http://$private_ipv4:2379'\n    initial-advertise-peer-urls: 'http://$private_ipv4:2380'\n    listen-client-urls: 'http://0.0.0.0:2379,http://0.0.0.0:4001'\n    listen-peer-urls: 'http://$private_ipv4:2380,http://$private_ipv4:7001'\n  etcd:\n    addr: $private_ipv4:4001\n    peer-addr: $private_ipv4:7001\n    cluster-active-size: 5\n    cluster-remove-delay: 180.0\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        }
      }
    }
  },
  "Description": "Jobs stack",
  "AWSTemplateFormatVersion": "2010-09-09"
}
