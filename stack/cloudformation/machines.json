{
  "Description": "Jobs stack",
  "Parameters": {
    "KeyPair": {
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance.",
      "Type": "String"
    },
    "ClusterSize": {
      "Description": "Number of nodes in your cluster",
      "Type": "Number",
      "Default": 3,
      "MinValue": 3,
      "MaxValue": 10
    },
    "DiscoveryURL": {
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new",
      "Type": "String"
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "CoreOSSecurityGroup": {
      "Properties": {
        "GroupDescription": "Jobs",
        "SecurityGroupIngress": [
          {
            "ToPort": 22,
            "IpProtocol": "tcp",
            "FromPort": 22,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "ToPort": 80,
            "FromPort": 80,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "CoreOSAccessKey": {
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      },
      "Type": "AWS::IAM::AccessKey"
    },
    "CoreOSServerLaunchConfig": {
      "Properties": {
        "InstanceType": "t2.micro",
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "ami"
          ]
        },
        "KeyName": {
          "Ref": "KeyPair"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n    #- name: master.service\n    #  command: start\n    #  content: \n  etcd:\n    addr: $private_ipv4:4001\n    peer-addr: $private_ipv4:7001\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ]
      },
      "Type": "AWS::AutoScaling::LaunchConfiguration"
    },
    "EtcdIngress7001": {
      "Properties": {
        "ToPort": 7001,
        "IpProtocol": "tcp",
        "FromPort": 7001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "EtcdIngress4001": {
      "Properties": {
        "ToPort": 4001,
        "IpProtocol": "tcp",
        "FromPort": 4001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "RedisIngress6379": {
      "Properties": {
        "ToPort": 6379,
        "IpProtocol": "tcp",
        "FromPort": 6379,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        }
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "CoreOSServerAutoScale": {
      "Properties": {
        "MinSize": 1,
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "MaxSize": 10,
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        },
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "Tags": [
          {
            "PropagateAtLaunch": true,
            "Value": {
              "Ref": "AWS::StackName"
            },
            "Key": "Name"
          }
        ]
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup"
    }
  },
  "Mappings": {
    "RegionMap": {
      "eu-central-1": {
        "AMI": "ami-d44f7dc9"
      },
      "ap-southeast-1": {
        "AMI": "ami-54053106"
      },
      "us-west-1": {
        "AMI": "ami-be958ffb"
      },
      "ap-southeast-2": {
        "AMI": "ami-0b027431"
      },
      "eu-west-1": {
        "AMI": "ami-e724b190"
      },
      "us-east-1": {
        "AMI": "ami-eeefb886"
      },
      "us-west-2": {
        "AMI": "ami-a587a095"
      },
      "sa-east-1": {
        "AMI": "ami-7b972966"
      },
      "ap-northeast-1": {
        "AMI": "ami-7ffc1c7f"
      }
    }
  }
}
