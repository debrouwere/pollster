{
  "Description": "Jobs stack",
  "Parameters": {
    "ClusterSize": {
      "Type": "Number",
      "MinValue": 1,
      "Description": "Number of nodes in your cluster",
      "Default": 1
    },
    "KeyPair": {
      "Type": "String",
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance."
    },
    "DiscoveryURL": {
      "Type": "String",
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new"
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "EtcdIngress4001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 4001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 4001,
        "IpProtocol": "tcp"
      }
    },
    "CoreOSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "SecurityGroupIngress": [
          {
            "FromPort": 22,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0",
            "ToPort": 22
          },
          {
            "FromPort": 80,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0",
            "ToPort": 80
          }
        ],
        "GroupDescription": "Jobs"
      }
    },
    "CoreOSAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      }
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "RedisIngress6379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 6379,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 6379,
        "IpProtocol": "tcp"
      }
    },
    "CoreOSServerLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "KeyName": {
          "Ref": "KeyPair"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  update:\n    reboot-strategy: off\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n  etcd:\n    addr: $private_ipv4:4001\n    peer-addr: $private_ipv4:7001\n    cluster-active-size: 5\n    cluster-remove-delay: 180.0\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "ami"
          ]
        },
        "InstanceType": "t2.micro",
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ]
      }
    },
    "EtcdIngress7001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "FromPort": 7001,
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 7001,
        "IpProtocol": "tcp"
      }
    },
    "CoreOSServerAutoScale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "MaxSize": 10,
        "Tags": [
          {
            "Key": "Name",
            "PropagateAtLaunch": true,
            "Value": {
              "Ref": "AWS::StackName"
            }
          }
        ],
        "MinSize": 1,
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        },
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        }
      }
    }
  },
  "Mappings": {
    "RegionMap": {
      "us-west-2": {
        "ami": "ami-0789a437"
      },
      "ap-southeast-2": {
        "ami": "ami-b9b5c583"
      },
      "eu-west-1": {
        "ami": "ami-55950a22"
      },
      "ap-northeast-1": {
        "ami": "ami-af28dcaf"
      },
      "us-west-1": {
        "ami": "ami-8dd533c9"
      },
      "ap-southeast-1": {
        "ami": "ami-f80b3aaa"
      },
      "sa-east-1": {
        "ami": "ami-2354ec3e"
      },
      "eu-central-1": {
        "ami": "ami-0e300d13"
      },
      "us-east-1": {
        "ami": "ami-323b195a"
      }
    }
  }
}
