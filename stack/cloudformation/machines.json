{
  "Description": "Jobs stack",
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "DiscoveryURL": {
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new?size=n",
      "Type": "String"
    },
    "ClusterSize": {
      "Description": "Number of nodes in your cluster",
      "Default": 3,
      "MinValue": 3,
      "Type": "Number"
    },
    "KeyPair": {
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance.",
      "Type": "String"
    }
  },
  "Mappings": {
    "RegionMap": {
      "ap-northeast-1": {
        "ami": "ami-88c80088"
      },
      "ap-southeast-2": {
        "ami": "ami-4fdca375"
      },
      "eu-west-1": {
        "ami": "ami-fd92f88a"
      },
      "us-west-1": {
        "ami": "ami-6b09e72f"
      },
      "us-west-2": {
        "ami": "ami-77f5c647"
      },
      "eu-central-1": {
        "ami": "ami-c2635ddf"
      },
      "sa-east-1": {
        "ami": "ami-0d33b410"
      },
      "ap-southeast-1": {
        "ami": "ami-e22a14b0"
      },
      "us-east-1": {
        "ami": "ami-b8d0c3d0"
      }
    }
  },
  "Resources": {
    "EtcdIngress2379": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "FromPort": 2379,
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 2379
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "EtcdIngress2380": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "FromPort": 2380,
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 2380
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "RedisIngress6379": {
      "Properties": {
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        },
        "IpProtocol": "tcp",
        "FromPort": 6379,
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "ToPort": 6379
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "CoreOSSecurityGroup": {
      "Properties": {
        "GroupDescription": "Jobs",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "CidrIp": "0.0.0.0/0",
            "ToPort": 22
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "CidrIp": "0.0.0.0/0",
            "ToPort": 80
          }
        ]
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "CoreOSServerAutoScale": {
      "Properties": {
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "MaxSize": 10,
        "MinSize": 3,
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "AWS::StackName"
            },
            "PropagateAtLaunch": true
          }
        ]
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup"
    },
    "CoreOSServerLaunchConfig": {
      "Properties": {
        "KeyName": {
          "Ref": "KeyPair"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  update:\n    reboot-strategy: off\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n  fleet:\n    peer-addr: $private_ipv4:2379\n    public-ip: $private_ipv4\n  etcd:\n    addr: $private_ipv4:2379\n    peer-addr: $private_ipv4:2380\n    cluster-active-size: 5\n    cluster-remove-delay: 180.0\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "ami"
          ]
        },
        "InstanceType": "t2.micro",
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ]
      },
      "Type": "AWS::AutoScaling::LaunchConfiguration"
    },
    "CoreOSAccessKey": {
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      },
      "Type": "AWS::IAM::AccessKey"
    }
  }
}
