{
  "Description": "Jobs stack",
  "Mappings": {
    "RegionMap": {
      "sa-east-1": {
        "ami": "ami-75972968"
      },
      "ap-southeast-1": {
        "ami": "ami-56053104"
      },
      "us-west-1": {
        "ami": "ami-b8958ffd"
      },
      "eu-central-1": {
        "ami": "ami-da4f7dc7"
      },
      "ap-southeast-2": {
        "ami": "ami-09027433"
      },
      "us-west-2": {
        "ami": "ami-a387a093"
      },
      "ap-northeast-1": {
        "ami": "ami-7dfc1c7d"
      },
      "us-east-1": {
        "ami": "ami-e0efb888"
      },
      "eu-west-1": {
        "ami": "ami-e524b192"
      }
    }
  },
  "Parameters": {
    "KeyPair": {
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance.",
      "Type": "String"
    },
    "DiscoveryURL": {
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new",
      "Type": "String"
    },
    "ClusterSize": {
      "Description": "Number of nodes in your cluster",
      "Type": "Number",
      "MinValue": 1,
      "Default": 1
    }
  },
  "Resources": {
    "EtcdIngress7001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "ToPort": 7001,
        "IpProtocol": "tcp",
        "FromPort": 7001,
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        }
      }
    },
    "RedisIngress6379": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "ToPort": 6379,
        "IpProtocol": "tcp",
        "FromPort": 6379,
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        }
      }
    },
    "EtcdIngress4001": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "ToPort": 4001,
        "IpProtocol": "tcp",
        "FromPort": 4001,
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup",
            "GroupId"
          ]
        },
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        }
      }
    },
    "CoreOSAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      }
    },
    "CoreOSServerLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "KeyName": {
          "Ref": "KeyPair"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#cloud-config\n\ncoreos:\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n  etcd:\n    addr: $private_ipv4:4001\n    peer-addr: $private_ipv4:7001\n    cluster-active-size: 1\n    cluster-remove-delay: 180.0\n    discovery: ",
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        },
        "InstanceType": "t2.micro",
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "ami"
          ]
        }
      }
    },
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    },
    "CoreOSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Jobs",
        "SecurityGroupIngress": [
          {
            "ToPort": 22,
            "IpProtocol": "tcp",
            "FromPort": 22,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "ToPort": 80,
            "IpProtocol": "tcp",
            "FromPort": 80,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "CoreOSServerAutoScale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "MaxSize": 10,
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        },
        "MinSize": 1,
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        },
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        },
        "Tags": [
          {
            "Value": {
              "Ref": "AWS::StackName"
            },
            "PropagateAtLaunch": true,
            "Key": "Name"
          }
        ]
      }
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09"
}
