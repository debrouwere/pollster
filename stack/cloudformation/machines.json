{
  "AWSTemplateFormatVersion": "2010-09-09", 
  "Parameters": {
    "KeyPair": {
      "Type": "String", 
      "Description": "The name of an existing EC2 Key Pair to allow SSH access to the instance."
    }, 
    "ClusterSize": {
      "Default": 3, 
      "MinValue": 3, 
      "Type": "Number", 
      "Description": "Number of nodes in your cluster", 
      "MaxValue": 10
    }, 
    "DiscoveryURL": {
      "Type": "String", 
      "Description": "An unique etcd cluster discovery URL. Grab a new token from https://discovery.etcd.io/new"
    }
  }, 
  "Description": "Jobs stack", 
  "Resources": {
    "CoreOSServerLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration", 
      "Properties": {
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "", 
              [
                "#cloud-config\n\ncoreos:\n  units:\n    - name: etcd.service\n      command: start\n    - name: fleet.service\n      command: start\n    #- name: master.service\n    #  command: start\n    #  content: \n  etcd:\n    addr: $private_ipv4:4001\n    peer-addr: $private_ipv4:7001\n    discovery: ", 
                {
                  "Ref": "DiscoveryURL"
                }
              ]
            ]
          }
        }, 
        "KeyName": {
          "Ref": "KeyPair"
        }, 
        "SecurityGroups": [
          {
            "Ref": "CoreOSSecurityGroup"
          }
        ], 
        "InstanceType": "t2.micro", 
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap", 
            {
              "Ref": "AWS::Region"
            }, 
            "ami"
          ]
        }
      }
    }, 
    "CoreOSServerAutoScale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup", 
      "Properties": {
        "MinSize": 1, 
        "MaxSize": 10, 
        "AvailabilityZones": {
          "Fn::GetAZs": {
            "Ref": "AWS::Region"
          }
        }, 
        "DesiredCapacity": {
          "Ref": "ClusterSize"
        }, 
        "Tags": [
          {
            "Value": {
              "Ref": "AWS::StackName"
            }, 
            "PropagateAtLaunch": true, 
            "Key": "Name"
          }
        ], 
        "LaunchConfigurationName": {
          "Ref": "CoreOSServerLaunchConfig"
        }
      }
    }, 
    "CoreOSAccessKey": {
      "Type": "AWS::IAM::AccessKey", 
      "Properties": {
        "UserName": {
          "Ref": "CoreOSUser"
        }
      }
    }, 
    "EtcdIngress4001": {
      "Type": "AWS::EC2::SecurityGroupIngress", 
      "Properties": {
        "ToPort": 4001, 
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        }, 
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup", 
            "GroupId"
          ]
        }, 
        "IpProtocol": "tcp", 
        "FromPort": 4001
      }
    }, 
    "EtcdIngress7001": {
      "Type": "AWS::EC2::SecurityGroupIngress", 
      "Properties": {
        "ToPort": 7001, 
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        }, 
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup", 
            "GroupId"
          ]
        }, 
        "IpProtocol": "tcp", 
        "FromPort": 7001
      }
    }, 
    "RedisIngress6379": {
      "Type": "AWS::EC2::SecurityGroupIngress", 
      "Properties": {
        "ToPort": 6379, 
        "GroupName": {
          "Ref": "CoreOSSecurityGroup"
        }, 
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "CoreOSSecurityGroup", 
            "GroupId"
          ]
        }, 
        "IpProtocol": "tcp", 
        "FromPort": 6379
      }
    }, 
    "CoreOSUser": {
      "Type": "AWS::IAM::User"
    }, 
    "CoreOSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup", 
      "Properties": {
        "SecurityGroupIngress": [
          {
            "ToPort": 22, 
            "IpProtocol": "tcp", 
            "FromPort": 22, 
            "CidrIp": "0.0.0.0/0"
          }, 
          {
            "ToPort": 80, 
            "FromPort": 80, 
            "IpProtocol": "tcp", 
            "CidrIp": "0.0.0.0/0"
          }
        ], 
        "GroupDescription": "Jobs"
      }
    }
  }, 
  "Mappings": {
    "RegionMap": {
      "us-east-1": {
        "ami": "ami-d878c3b0"
      }, 
      "ap-northeast-1": {
        "ami": "ami-838eb882"
      }, 
      "sa-east-1": {
        "ami": "ami-75922668"
      }, 
      "ap-southeast-1": {
        "ami": "ami-7878592a"
      }, 
      "ap-southeast-2": {
        "ami": "ami-1dabc627"
      }, 
      "us-west-2": {
        "ami": "ami-f52c63c5"
      }, 
      "us-west-1": {
        "ami": "ami-856772c0"
      }, 
      "eu-west-1": {
        "ami": "ami-58e14e2f"
      }
    }
  }
}
